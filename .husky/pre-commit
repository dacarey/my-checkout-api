#!/bin/sh

# Get the current branch name
branch=$(git rev-parse --abbrev-ref HEAD)

# Check if we're on the main branch
if [ "$branch" = "main" ]; then
  echo "ðŸš« Direct commits to main branch are not allowed!"
  echo "Please create a feature branch and use a pull request:"
  echo ""
  echo "  git checkout -b feature/your-feature-name"
  echo "  git add ."
  echo "  git commit -m 'Your commit message'"
  echo "  git push -u origin feature/your-feature-name"
  echo ""
  echo "Then create a pull request on GitHub."
  exit 1
fi

echo "âœ… Commit allowed on branch: $branch"
