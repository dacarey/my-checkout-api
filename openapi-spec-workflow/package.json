{
  "name": "my-checkout-api-openapi-spec-workflow",
  "version": "0.5.0",
  "description": "OpenAPI Specification Workflow for My Checkout API",
  "scripts": {
    "preversion": "echo $npm_package_version > .version-old",
    "version": "node scripts/sync-openapi-version.js",
    "postversion": "rm -f .version-old",
    "validate": "npm run validate:spectral && npm run validate:schemas",
    "validate:spectral": "spectral lint ../openapi/checkout-openapi-unresolved.yaml",
    "validate:schemas": "node scripts/validate-schemas.js",
    "sync:dev": "node scripts/sync-dev.js",
    "download:resolved": "node scripts/download-resolved.js",
    "download:resolved:force": "node scripts/download-resolved.js --force",
    "publish:dev": "node scripts/publish.js --dev",
    "publish:prod": "node scripts/publish.js --prod",
    "compare:specs": "scripts/compare-specs.sh"
  },
  "devDependencies": {
    "@seriousme/openapi-schema-validator": "^1.6.4",
    "@stoplight/spectral-cli": "^6.11.0",
    "jest-openapi": "^0.14.2",
    "swaggerhub-cli": "^0.9.1"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "openapi",
    "swagger",
    "api-specification",
    "validation",
    "swaggerhub"
  ]
}
