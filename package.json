{
  "name": "my-checkout-api",
  "version": "0.5.0",
  "description": "Multi-account serverless checkout API using AWS CDK with TypeScript",
  "engines": {
    "node": ">=22.0.0"
  },
  "workspaces": [
    "lambda",
    "infra",
    "openapi-spec-workflow",
    "packages/checkout-3ds-session-service/library",
    "packages/checkout-3ds-session-service/infra",
    "examples"
  ],
  "scripts": {
    "build": "npm run build --workspace=infra",
    "build:3ds-lib": "npm run build --workspace=packages/checkout-3ds-session-service/library",
    "build:3ds-infra": "npm run build --workspace=packages/checkout-3ds-session-service/infra",
    "test": "npm run test --workspace=infra",
    "test:run": "npm run test:run --workspace=infra",
    "test:3ds": "npm run test --workspace=packages/checkout-3ds-session-service/library",
    "test:3ds:run": "npm run test:run --workspace=packages/checkout-3ds-session-service/library",
    "test:3ds-infra": "npm run test --workspace=packages/checkout-3ds-session-service/infra",
    "test:3ds-infra:run": "npm run test:run --workspace=packages/checkout-3ds-session-service/infra",
    "deploy:single": "BYPASS_AUTHORIZER=true ./deploy-single-account.sh",
    "deploy:single:auth": "./deploy-single-account.sh",
    "deploy:single:full-3ds": "BYPASS_AUTHORIZER=true ./deploy-single-account.sh --use-3ds-session-service true",
    "deploy:single:full-3ds:auth": "./deploy-single-account.sh --use-3ds-session-service true",
    "diff:single": "BYPASS_AUTHORIZER=true ./diff-single-account.sh",
    "diff:single:auth": "./diff-single-account.sh",
    "destroy:single": "./destroy-single-account.sh",
    "verify": "./verify-deployment.sh",
    "examples": "./test-checkout-api.sh",
    "examples:build": "npm run build --workspace=examples",
    "examples:dev": "npm run dev --workspace=examples",
    "examples:verbose": "./test-checkout-api.sh --verbose",
    "prepare": "husky",
    "version:all": "npm version --workspaces --include-workspace-root",
    "version:impl": "npm version --workspace=lambda --workspace=infra --include-workspace-root",
    "version:openapi": "npm version --workspace=openapi-spec-workflow"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dacarey/my-checkout-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dacarey/my-checkout-api/issues"
  },
  "homepage": "https://github.com/dacarey/my-checkout-api#readme",
  "devDependencies": {
    "husky": "^9.1.7"
  },
  "overrides": {
    "axios": "^1.13.1"
  }
}
